<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="my.edu.utar.attendancemanagementapplication.QRCodeGenerator">
    <EditText
        android:layout_width="match_parent"
        android:layout_weight="70"
        android:layout_marginHorizontal="30dp"
        android:layout_above="@+id/btn_generateQR"
        android:layout_height="wrap_content"
        android:id="@+id/et_qr_source"/>

    <Button
        android:id="@+id/btn_generateQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="56dp"
        android:text="Generate QR" />

    <Button
        android:id="@+id/scan_qr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="56dp"
        android:text="Scan QR Code" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:layout_above="@+id/et_qr_source"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_qrcode"
            />
    </LinearLayout>
</RelativeLayout>